  <%- include('components/footer') %>

    <!-- Bootstrap JavaScript Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Button redirection functionality -->
    <script>
      const buttonUrlMap = {
        '#btnLogin': '/login',
        '#btnSignUp': '/sign-up'
      };

      for (let buttonId in buttonUrlMap) {
        const button = document.querySelector(buttonId);
        button.addEventListener('click', function () {
          window.location.href = buttonUrlMap[buttonId];
        });
      }
    </script>

    <style>
      .video-container {
        position: relative;
        width: 100%;
        height: 100vh;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        border-bottom: 0.5px solid #000;
      }

      /* Moving Objects in Background */
      .moving-objects {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: -1;
        /* Keeps objects behind the content */
      }

      .object {
        position: absolute;
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #34D399, #22C55E);
        border-radius: 50%;
        opacity: 0.6;
        animation: float 6s infinite ease-in-out;
        /* Faster animation */
      }

      /* Generate multiple objects with different properties */
      .object:nth-child(1) {
        top: 10%;
        left: 20%;
        animation-delay: 0s;
        animation-duration: 6s;
      }
      
      .object:nth-child(2) {
        top: 30%;
        left: 70%;
        width: 80px;
        height: 80px;
        animation-delay: 1s;
        animation-duration: 8s;
      }
      
      .object:nth-child(3) {
        top: 50%;
        left: 40%;
        width: 60px;
        height: 60px;
        animation-delay: 2s;
        animation-duration: 6s;
      }
      
      .object:nth-child(4) {
        top: 70%;
        left: 10%;
        animation-delay: 3s;
        animation-duration: 7s;
      }
      
      .object:nth-child(5) {
        top: 90%;
        left: 80%;
        width: 70px;
        height: 70px;
        animation-delay: 4s;
        animation-duration: 9s;
      }
      
      /* Additional objects with new positions and properties */
      .object:nth-child(6) {
        top: 20%;
        left: 50%;
        width: 50px;
        height: 50px;
        animation-delay: 5s;
        animation-duration: 6s;
      }
      
      .object:nth-child(7) {
        top: 40%;
        left: 30%;
        width: 90px;
        height: 90px;
        animation-delay: 6s;
        animation-duration: 10s;
      }
      
      .object:nth-child(8) {
        top: 60%;
        left: 80%;
        width: 60px;
        height: 60px;
        animation-delay: 7s;
        animation-duration: 8s;
      }
      
      .object:nth-child(9) {
        top: 80%;
        left: 10%;
        width: 75px;
        height: 75px;
        animation-delay: 8s;
        animation-duration: 9s;
      }

      /* Animation for floating */
      @keyframes float {
        0% {
          transform: translateY(0) translateX(0) scale(1);
          opacity: 0.6;
        }

        50% {
          transform: translateY(-70px) translateX(50px) scale(1.2);
          /* More movement for a dynamic effect */
          opacity: 0.8;
        }

        100% {
          transform: translateY(0) translateX(0) scale(1);
          opacity: 0.6;
        }
      }

      /* Glassmorphism Effect for Overlay */
      .content-overlay {
        padding: 25px;
        border-radius: 15px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(6px);
        /* Reduce the blur effect to avoid the "weird box" */
        color: #000;
        /* Change text color to black */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        /* Lighter shadow to avoid a harsh box effect */
      }

      /* Responsive Design for Moving Objects */
      @media (max-width: 768px) {
        .object {
          width: 40px;
          height: 40px;
          animation-duration: 4s;
          /* Even faster for smaller screens */
        }

        .object:nth-child(2),
        .object:nth-child(5) {
          width: 60px;
          height: 60px;
        }

        .object:nth-child(3) {
          width: 50px;
          height: 50px;
        }
      }

      @media (max-width: 480px) {
        .object {
          width: 30px;
          height: 30px;
          animation-duration: 3s;
          /* Speed it up further for mobile screens */
        }

        .object:nth-child(2),
        .object:nth-child(5) {
          width: 50px;
          height: 50px;
        }

        .object:nth-child(3) {
          width: 40px;
          height: 40px;
        }
      }

      /* Button Styling */
      .btn-custom-light,
      .btn-custom-dark {
        padding: 12px 30px;
        font-size: 1.1rem;
        border-radius: 30px;
        border: 2px solid black;
        /* Added black border */
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
      }

      .btn-custom-light:hover,
      .btn-custom-dark:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2);
      }

      .btn-custom-light {
        background-color: #fff;
        color: #000;
      }

      .btn-custom-dark {
        background-color: #343a40;
        color: #fff;
      }

      /* Additional styling */
      .feature-box,
      .step-box {
        border-radius: 8px;
        transition: transform 0.2s;
        background-color: rgba(219, 216, 216, 0.8);
        /* Darker background with slight transparency */
        color: #000000;
        /* Change text color to black */
      }

      .feature-box:hover,
      .step-box:hover {
        transform: scale(1.05);
      }

      .cta-section {
        background: #343a40;
        color: #fff;
      }

      .feature-icon {
        max-width: 100px;
        /* Set a consistent max width */
        height: 100px;
        /* Set a fixed height for circular shape */
        border-radius: 50%;
        /* Make the image circular */
        object-fit: cover;
        /* Ensure the image covers the area without distortion */
        margin-bottom: 15px;
        /* Adds some spacing below the image */
      }

      @media (max-width: 768px) {
        .feature-icon {
          max-width: 80px;
          /* Slightly smaller for mobile view */
          height: 80px;
          /* Maintain circular shape */
        }
      }

      .carousel-section {
        background-color: #f8f9fa;
        /* Light background for contrast */
      }

      .testimonial-text {
        font-size: 1.2rem;
        /* Adjust font size for readability */
      }

      .blockquote-footer {
        font-size: 1rem;
        /* Slightly smaller for the footer */
        color: #6c757d;
        /* Bootstrap's muted color for footer */
      }

      @media (max-width: 576px) {
        .testimonial-text {
          font-size: 1rem;
          /* Reduce font size on small screens */
        }

        .blockquote-footer {
          font-size: 0.9rem;
          /* Further reduce footer size on small screens */
        }
      }
    </style>

</body>

</html>