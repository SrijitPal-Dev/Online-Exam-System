<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Schedule an Exam</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(to bottom, #f0f4ff, #d9e8ff);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: 90px;
            animation: fadeIn 0.8s ease-in-out;
        }

        .questions-available {
            background: #f8f9fa;
            border: 1px solid #ddd;
            padding: 10px;
            border-radius: 5px;
            font-size: 0.9rem;
            color: #333;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>
    <%- include('components/navbar') %>
        <div class="container col-12 col-md-6">
            <h1 class="text-center mb-4">Schedule an Exam</h1>
            <form id="examForm" action="/schedule-exam" method="post">
                <div class="mb-3">
                    <label for="subject" class="form-label">Select Subject</label>
                    <select id="subject" name="subject" class="form-select" required>
                        <option value="" disabled selected>Select Subject</option>
                        <option>Software Engineering</option>
                        <option>Operating System</option>
                        <option>Humanities III</option>
                        <option>OOPs</option>
                        <option>Artificial Intelligence</option>
                        <option>Compiler Design</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="questions" class="form-label">Number of Questions</label>
                    <input type="number" id="questions" name="questions" class="form-control" min="1"
                        placeholder="Enter number of questions" required>
                </div>
                <div class="mb-3">
                    <label for="date" class="form-label">Exam Date</label>
                    <input type="date" id="date" name="date" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="startTime" class="form-label">Start Time</label>
                    <input type="time" id="startTime" name="startTime" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="endTime" class="form-label">End Time</label>
                    <input type="time" id="endTime" name="endTime" class="form-control" required>
                </div>
    
                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>
        <!-- Bootstrap JS Bundle -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const totalQuestionsElement = document.getElementById('totalQuestions');

                // Simulate fetching total questions from a database
                setTimeout(() => {
                    const totalQuestions = 150; // Example value from DBMS
                    totalQuestionsElement.textContent = totalQuestions;
                }, 1000);

                const form = document.getElementById('examForm');
                form.addEventListener('submit', (event) => {
                    const subject = document.getElementById('subject').value;
                    const questions = document.getElementById('questions').value;
                    const date = document.getElementById('date').value;
                    const startTime = document.getElementById('startTime').value;
                    const endTime = document.getElementById('endTime').value;

                    alert(`Exam Scheduled:
                Subject: ${subject}
                Questions: ${questions}
                Date: ${date}
                Time: ${startTime} - ${endTime}`);
                });
            });

        </script>
</body>

</html>